function waiting {
    a=1
    sp="/-\|"
    echo -n ' '
    while true
    do
        printf "\b${sp:a++%${#sp}:1}"
    done
}
function finger {
    i=0
    while [ "$i" -lt 5 ]    # this is loop1
    do
        printf "\033[1;31m \r☜ ☜ ☜ ☜ ☜ ☜ ☜ ☜  "
        sleep 1
        printf "\033[1;32m \r☝ ☝ ☝ ☝ ☝ ☝ ☝ ☝ "
        sleep 1
        printf "\033[1;33m \r☞ ☞ ☞ ☞ ☞ ☞ ☞ ☞ "
        sleep 1
        printf "\033[1;34m \r☟ ☟ ☟ ☟ ☟ ☟ ☟ ☟ "
        sleep 1
        printf "\033[1;35m \r✍ ✍ ✍ ✍ ✍ ✍ ✍ ✍ "
        sleep 1
        printf "\033[1;36m \r✌ ✌ ✌ ✌ ✌ ✌ ✌ ✌ "
        sleep 1
        i=`expr $i + 1`
    done
}
